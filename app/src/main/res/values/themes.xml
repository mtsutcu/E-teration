<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Eteration" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/myBlue</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="colorAccent">@color/myBlue</item>
        <item name="colorSurface">@color/white</item>
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.Eteration" parent="Base.Theme.Eteration" />
    <style name="Theme.BottomNavigationView.ActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/myBlue</item>
    </style>
        <style name="MyToolbarBigTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="MyToolbarSmallTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="SearchBarStyle">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:hint">Search</item>
        <item name="android:drawableStart">@drawable/search_icon</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:inputType">textCapSentences</item>
        <item name="android:textColorHint">@color/darkGrey</item>
        <item name="android:background">@drawable/search_bar_background</item>
        <item name="android:drawablePadding">@dimen/_4sdp</item>
        <item name="maxLines">1</item>
    </style>
    <style name="FilterToolbarSmallTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="RadioButton" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/myBlue</item>
        <item name="buttonTint">@color/myBlue</item>
        <item name="fontFamily">@font/montserrat</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="colorControlNormal">@color/myBlue</item>
    </style>
</resources>